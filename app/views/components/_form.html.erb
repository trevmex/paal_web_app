<%= form_for @component, :html => {:multipart => true, :class => "uniForm"} do |f| %>
    <% if @component.errors.any? %>
      <div id="errorExplanation">
        <h2><%= pluralize(@component.errors.count, "error") %> prohibited this component from being saved:</h2>
        <ul>
          <% @component.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
  <fieldset class="inlineLabels">
    <div class="ctrlHolder">
      <%= f.label :media %>
      <%= f.file_field :media %>
    </div>
    
    <div class="ctrlHolder">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>

    <div class="ctrlHolder">
      <%= f.label :component_type %>
      <%= f.select :component_type, Component.component_types.collect {|component_type| [component_type.capitalize, component_type]} %>
    </div>
    
    <div class="buttonHolder">
      <%= f.submit :class => "primaryAction" %>
    </div>
  </fieldset>
<% end %>
